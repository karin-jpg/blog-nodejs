<%- include('./../../partials/header.ejs') %>
<%- include('./../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <h2>Categorias</h2>
    <hr>
    <a href="users/create">
        <button class="btn btn-success">Criar novo usuário</button>
    </a>
    <hr>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <th><%= user.name %></th>
                    <th><%= user.email %></th>
                    <th>
                        <a href="/admin/users/edit/<%=user.id%>" class="btn btn-warning">Editar</a>
                        <form action="/users/delete" method="POST" style="display: inline;" onsubmit="confirmDelete(event, this)">
                            <input type="hidden" name="id" value = "<%= user.id %>">
                            <button class="btn btn-danger">Excluir</button>
                        </form>
                    </th>
                </tr>
            
            <%});%>
        </tbody>
    </table>
</div>
<%- include('./../../partials/footer.ejs') %> 
<script>
    function confirmDelete(event, form){
        event.preventDefault();
        if(confirm("Deseja realmente excluir o usuário?")){
            form.submit();
        }
    }
</script>